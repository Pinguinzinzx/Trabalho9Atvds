<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="unipar.br.trabalho9atividades.ContaDeLuz"
      alignment="CENTER" spacing="15" style="-fx-padding: 30;">

    <Label text="Conta de Luz" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Consumo (kWh):"/>
        <TextField fx:id="txtConsumo" prefWidth="120"/>
    </HBox>

    <Button fx:id="btnCalcular" text="Calcular" prefWidth="200"/>

    <Label fx:id="lblResultado" text="" style="-fx-font-size:16px; -fx-text-fill:white;"/>

    <Button fx:id="btnVoltar" text="Voltar" prefWidth="200"/>

</VBox>
